:empty:not(body) {
  height: 4em;
  box-shadow: 0px 0px 0px 2px #ffc40d;
  opacity: 0.1;
}
.app-over:not(body),
.app-current:not(body) {
  box-shadow: 0px 0px 0px 2px #049cdb;
  opacity: 1;
}
.app-over:not(body):after {
  content: '+';
  font-size: 1.5em;
  font-weight: bold;
  text-align: center;
  background-color: #ffc40d;
  color: black;
  width: 100%;
  height: 1.5em;
  line-height: 1.5em;
  display: block;
  opacity: 0.1;
}
